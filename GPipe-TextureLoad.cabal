  build-depends:   
                   base >= 4 && <5,
                   stb-image >=0.2.1 && < 0.3,
                   GPipe >= 1.3.2,
                   bitmap
  hs-source-dirs:  src
  ghc-options:     -Wall
  exposed-modules: Graphics.GPipe.Texture.Load

